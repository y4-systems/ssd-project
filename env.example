# Security Configuration Template
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# JWT Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-make-it-long-and-random
SESSION_SECRET=your-session-secret-key-for-express-sessions

# Application Ports
PORT=5000
PACKAGE_PORT=5000
VENDOR_PORT=5001
GUEST_PORT=5002
FEEDBACK_PORT=3001
EVENT_PORT=5003
BUDGET_PORT=7000
MAIN_PORT=8000

# Environment
NODE_ENV=development

# OAuth Configuration (if using Google OAuth)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5003/auth/google/callback

# Security Settings
BCRYPT_ROUNDS=12
TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Security Headers
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# Error Logging
LOG_LEVEL=info
LOG_FILE=./logs/security.log