# Environment Configuration
NODE_ENV=development
# NODE_ENV=production

# Server Configuration
PORT=8000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/wedding_dev
MONGO_URI=mongodb://localhost:27017/wedding_dev
MONGO_URL=mongodb://localhost:27017/wedding_dev

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-min-32-chars

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-min-32-chars

# OAuth Configuration (for taskapp)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Frontend Domains (for CORS)
FRONTEND_DOMAIN=http://localhost:3000

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# IMPORTANT: 
# 1. Copy this file to .env in each backend directory
# 2. Replace all placeholder values with actual secrets
# 3. Use strong, random values for all secrets (minimum 32 characters)
# 4. Never commit .env files to version control
# 5. Use different secrets for development and production
